# Environment Configuration
ENV=development                 # development, production, testing
DEBUG=True                      # True for development, False for production
ENVIRONMENT=development         # development, staging, production

# Application
APP_NAME=LINE_AI_Assistant
APP_PORT=5000
APP_HOST=0.0.0.0

# Config Path
CONFIG_PATH=config/development/config.yaml

# Logging
LOG_LEVEL=INFO                 # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_PATH=logs
LOG_FORMAT=%(asctime)s | %(levelname)-8s | %(name)s:%(funcName)s:%(lineno)d - %(message)s
LOG_ROTATION="500 MB"
LOG_RETENTION="10 days"

# Error Handling
ERROR_REPORTING=True
ERROR_LOG_PATH=logs/errors.log

# Performance Monitoring
ENABLE_MONITORING=True
PERFORMANCE_LOG_PATH=logs/performance.log

# Database
DATABASE_URL=sqlite:///test.db  # SQLite for development

# Cache
CACHE_TYPE=memory              # memory, redis
CACHE_TTL=3600                # seconds
REDIS_URL=redis://localhost:6379/0  # If using Redis

# LINE Bot Configuration
LINE_CHANNEL_SECRET=your-channel-secret-here
LINE_CHANNEL_ACCESS_TOKEN=your-channel-access-token-here
LINE_BOT_HANDLER_PATH=/webhook

# AI Models Configuration
DEFAULT_AI_MODEL=Gemini 2.0 Flash
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Settings
MODEL_TEMPERATURE=0.7          # 0.0 to 1.0
MAX_TOKENS=1000
TOP_P=0.9                      # 0.0 to 1.0
PRESENCE_PENALTY=0.0           # -2.0 to 2.0
FREQUENCY_PENALTY=0.0          # -2.0 to 2.0

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_STORE_TYPE=faiss        # faiss, pinecone
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Development Tools
NGROK_AUTHTOKEN=your-ngrok-authtoken-here
NGROK_REGION=ap               # ap, us, eu, au, sa, jp, in

# Security
ENABLE_RATE_LIMIT=True
RATE_LIMIT_REQUESTS=100       # requests per window
RATE_LIMIT_WINDOW=3600       # seconds

# Session Management
SESSION_TIMEOUT=3600          # seconds
SESSION_CLEANUP_INTERVAL=86400 # seconds

# Webhook Security